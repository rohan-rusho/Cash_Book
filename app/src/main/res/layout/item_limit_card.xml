<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/limitCardRoot"
    android:layout_width="200dp"
    android:layout_height="140dp"
    android:padding="14dp"
    android:background="@drawable/bg_limit_gradient_1"
    android:clipToOutline="true">

    <!-- Brand pill -->
    <TextView
        android:id="@+id/tvBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="@drawable/bg_brand_pill"
        android:text="Shopee"
        android:textColor="@color/textPrimary"
        android:textSize="11sp"
        android:textStyle="bold"/>

    <!-- Circular percentage container -->
    <FrameLayout
        android:id="@+id/percentContainer"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp">

        <!-- outer circle shadow / ring could be added here -->
        <ImageView
            android:id="@+id/ivProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_progress_ring_90"
            android:contentDescription="@string/progress"/>

        <TextView
            android:id="@+id/tvPercent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="90%"
            android:textColor="@color/textPrimary"
            android:textStyle="bold"
            android:textSize="12sp"/>
    </FrameLayout>

    <!-- Label -->
    <TextView
        android:id="@+id/tvLimitLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvBrand"
        android:layout_marginTop="32dp"
        android:text="@string/buying_limit_label"
        android:textColor="@color/colorOnPrimary"
        android:textSize="12sp"/>

    <!-- Value -->
    <TextView
        android:id="@+id/tvLimitValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLimitLabel"
        android:layout_marginTop="4dp"
        android:text="Rp 750,000 / Rp 800,000"
        android:textColor="@color/colorOnPrimary"
        android:textStyle="bold"
        android:textSize="12sp"/>
</RelativeLayout>