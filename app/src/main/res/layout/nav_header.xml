<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="28dp"
    android:background="@color/navDrawerBlue">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tvAppNameDrawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cash Book"
        android:textColor="@color/colorOnPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSubtitleDrawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Track your shopping activities"
        android:textColor="@color/drawerSubtitle"
        android:textSize="12sp"
        android:layout_marginTop="6dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/drawerDivider"/>
</LinearLayout>