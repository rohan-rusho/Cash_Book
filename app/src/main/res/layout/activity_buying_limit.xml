<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootBuyingLimit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBackground"
    tools:context=".BuyingLimitActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top Blue Toolbar -->
            <LinearLayout
                android:id="@+id/topBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimaryBlue"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="12dp">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="12dp"
                    android:src="@drawable/ic_back_24"
                    app:tint="@color/colorOnPrimary"
                    android:contentDescription="@string/content_desc_back" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/buying_limit"
                    android:textColor="@color/colorOnPrimary"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:includeFontPadding="false"/>
            </LinearLayout>

            <!-- Content Panel -->
            <LinearLayout
                android:id="@+id/contentPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/cardBackground"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="20dp"
                android:paddingBottom="28dp">

                <!-- Horizontal Cards -->
                <HorizontalScrollView
                    android:id="@+id/hScrollLimits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    android:layout_marginBottom="28dp">

                    <LinearLayout
                        android:id="@+id/limitCardsRow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Each include uses a unique id + tag + gradient background -->
                        <include
                            android:id="@+id/cardShopee"
                            layout="@layout/item_limit_card"
                            android:layout_width="200dp"
                            android:layout_height="140dp"
                            android:layout_marginEnd="12dp"
                            android:tag="Shopee"
                            android:background="@drawable/bg_limit_gradient_1"/>

                        <include
                            android:id="@+id/cardTokopedia"
                            layout="@layout/item_limit_card"
                            android:layout_width="200dp"
                            android:layout_height="140dp"
                            android:layout_marginEnd="12dp"
                            android:tag="Tokopedia"
                            android:background="@drawable/bg_limit_gradient_2"/>

                        <include
                            android:id="@+id/cardLazada"
                            layout="@layout/item_limit_card"
                            android:layout_width="200dp"
                            android:layout_height="140dp"
                            android:layout_marginEnd="12dp"
                            android:tag="Lazada"
                            android:background="@drawable/bg_limit_gradient_3"/>

                        <include
                            android:id="@+id/cardAmazon"
                            layout="@layout/item_limit_card"
                            android:layout_width="200dp"
                            android:layout_height="140dp"
                            android:layout_marginEnd="12dp"
                            android:tag="Amazon"
                            android:background="@drawable/bg_limit_gradient_4"/>

                        <include
                            android:id="@+id/cardEbay"
                            layout="@layout/item_limit_card"
                            android:layout_width="200dp"
                            android:layout_height="140dp"
                            android:layout_marginEnd="12dp"
                            android:tag="eBay"
                            android:background="@drawable/bg_limit_gradient_5"/>

                        <include
                            android:id="@+id/cardAliExpress"
                            layout="@layout/item_limit_card"
                            android:layout_width="200dp"
                            android:layout_height="140dp"
                            android:layout_marginEnd="12dp"
                            android:tag="AliExpress"
                            android:background="@drawable/bg_limit_gradient_6"/>

                        <include
                            android:id="@+id/cardFlipkart"
                            layout="@layout/item_limit_card"
                            android:layout_width="200dp"
                            android:layout_height="140dp"
                            android:layout_marginEnd="12dp"
                            android:tag="Flipkart"
                            android:background="@drawable/bg_limit_gradient_7"/>

                        <include
                            android:id="@+id/cardEtsy"
                            layout="@layout/item_limit_card"
                            android:layout_width="200dp"
                            android:layout_height="140dp"
                            android:layout_marginEnd="12dp"
                            android:tag="Etsy"
                            android:background="@drawable/bg_limit_gradient_8"/>

                        <include
                            android:id="@+id/cardWalmart"
                            layout="@layout/item_limit_card"
                            android:layout_width="200dp"
                            android:layout_height="140dp"
                            android:layout_marginEnd="12dp"
                            android:tag="Walmart"
                            android:background="@drawable/bg_limit_gradient_9"/>

                        <include
                            android:id="@+id/cardBestBuy"
                            layout="@layout/item_limit_card"
                            android:layout_width="200dp"
                            android:layout_height="140dp"
                            android:layout_marginEnd="12dp"
                            android:tag="BestBuy"
                            android:background="@drawable/bg_limit_gradient_10"/>

                        <include
                            android:id="@+id/cardRakuten"
                            layout="@layout/item_limit_card"
                            android:layout_width="200dp"
                            android:layout_height="140dp"
                            android:layout_marginEnd="12dp"
                            android:tag="Rakuten"
                            android:background="@drawable/bg_limit_gradient_11"/>

                        <include
                            android:id="@+id/cardDaraz"
                            layout="@layout/item_limit_card"
                            android:layout_width="200dp"
                            android:layout_height="140dp"
                            android:layout_marginEnd="12dp"
                            android:tag="Daraz"
                            android:background="@drawable/bg_limit_gradient_12"/>
                    </LinearLayout>
                </HorizontalScrollView>

                <!-- Section Title -->
                <TextView
                    android:id="@+id/tvLimitSection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/limit_pemakaian"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="14dp"/>

                <!-- Amount + Frequency Row -->
                <LinearLayout
                    android:id="@+id/limitInputRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etLimitAmount"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_input_field"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:inputType="number"
                        android:hint="Amount"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"
                        android:imeOptions="actionDone"
                        android:singleLine="true"/>

                    <View
                        android:layout_width="12dp"
                        android:layout_height="0dp"/>

                    <Spinner
                        android:id="@+id/spinnerFrequency"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_spinner_field"
                        android:paddingStart="14dp"
                        android:paddingEnd="34dp"
                        android:spinnerMode="dropdown"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btnSaveLimit"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:background="@drawable/bg_primary_button"
                    android:textColor="@color/colorOnPrimary"/>

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="11sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="8dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>